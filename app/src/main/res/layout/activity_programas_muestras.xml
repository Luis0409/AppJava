<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal.programasMuestras">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nota"
            android:textColor="#000000"
            android:layout_marginHorizontal="15dp"
            android:textSize="12pt"
            />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        <ImageView
            android:id="@+id/pacman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pacman"
            />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>


            <ImageView
                android:id="@+id/agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/agenda"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/pacman"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <ImageView
                android:id="@+id/validador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/validador"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/agenda"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <ImageView
                android:id="@+id/otros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/otros"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/validador"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>